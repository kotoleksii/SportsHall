@model SportsHall.Models.Training
@{
    ViewBag.Title = "Delete Training";
}

<div class="row justify-content-center">
    <div class="card mb-3 w-50 bg-dark">
        <div class="card-header bg-transparent text-center">
            @Html.Label("Training №")
            @Html.DisplayFor(m => m.TrainingId)
        </div>

        <div class="card-body">
            <h5 class="card-title text-center">@Html.DisplayFor(m => m.Title)</h5>
            <p class="card-text text-center">@Html.DisplayFor(m => m.Coach)</p>
            <p class="card-text text-center">@Html.DisplayFor(m => m.Date)</p>
        </div>

        <div class="card-footer bg-transparent text-center">
            <p>Did you exactly complete this task?</p>
        </div>

        <div class="text-center">
            <form asp-controller="Training" asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="Yes" />
                    <a asp-action="Index" class="btn btn-primary">No</a>
                </div>
            </form>
        </div>
    </div>
</div>