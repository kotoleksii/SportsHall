@model SportsHall.Models.Hall
@{
    ViewBag.Title = "Delete Hall";
}

<div class="row justify-content-center">
    <div class="card mb-3 w-50 bg-dark">
        <div class="card-header bg-transparent text-center">
            @Html.Label("Hall №")
            @Html.DisplayFor(m => m.Id)
        </div>

        <div class="card-body">
            <h5 class="card-title text-center">@Html.DisplayFor(m => m.Title)</h5>
            <p class="card-text text-center">@Html.DisplayFor(m => m.Description)</p>
        </div>

        <div class="card-footer bg-transparent text-center">
        </div>

        <div class="text-center">
            <form asp-controller="Halls" asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                    <a asp-action="Index" class="btn btn-primary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>